@page "/modal"

<div class="blur modal-container">
    <div class="content">
        <div class="about">
            <p class="name">Przykładowa lokacja</p>
            <p class="description">Różne podmioty mogą zamieszczać ogłoszenia z prośbą o pomoc.</p>
            <p class="more-offerts">Prośby o pomoc</p>
        </div>
        <div class="offerts">
            <div class="offer">
                <div class="offer-name"><span class="text">@activity1.Name</span><p class="offer-category">Potrzebna pomoc</p></div>
                <p class="offer-description">@activity1.Description</p>
                <a href="#" class="offer-read-more">Więcej ></a>
            </div>
            <div class="offer">
                <div class="offer-name"><span class="text">@activity2.Name</span><p class="offer-category">Potrzebna pomoc</p></div>
                <p class="offer-description">@activity2.Description</p>
                <a href="#" class="offer-read-more">Więcej ></a>
            </div>
        </div>
    </div>
</div>

@code 
{
    ActivityModel activity1 = new ActivityModel();
    ActivityModel activity2 = new ActivityModel();

    protected override void OnInitialized()
    {
        activity1.Id = 1;
        activity1.Name = "Przykładowa akcja";
        activity1.Description = "Przykładowa akcja";

        activity2.Id = 2;
        activity2.Name = "Przykładowa akcja";
        activity2.Description = "Przykładowa akcja";
    }
}